# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False

# Database Configuration (Railway will provide these automatically)
DATABASE_URL=postgresql://username:password@hostname:port/database_name
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=your-railway-db-host
DB_PORT=5432

# Frontend Configuration
FRONTEND_URL=https://frontend-george-mikhails-projects.vercel.app

# Email Configuration (Optional - for user verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Social Authentication (Optional)
GOOGLE_OAUTH2_KEY=your-google-client-id
GOOGLE_OAUTH2_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# AWS S3 Storage (Optional - for file uploads)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Redis (for Celery - Optional)
REDIS_URL=redis://localhost:6379/0 